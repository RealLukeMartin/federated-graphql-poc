{
  "name": "subgraph-two",
  "version": "0.0.0",
  "description": "Arbol Sales Platform POC Subgraph Two",
  "main": "index.js",
  "engines": {
    "node": "^16.13.0"
  },
  "scripts": {
    "build:all": "run-s build build:copy:types",
    "build:copy:types": "copyfiles -a -u 3 \"src/graphql/typeDefs/**/*.gql\" dist/graphql/typeDefs",
    "build": "tsc",
    "dev:generate": "graphql-codegen --config codegen.yml -r dotenv/config --watch",
    "dev:server": "nodemon",
    "dev": "concurrently -n server,codegen -c red,cyan \"npm run dev:server\" \"npm run dev:generate\"",
    "generate": "graphql-codegen --config codegen.yml -r dotenv/config",
    "lint:fix": "eslint --format codeframe ./src --ext .ts,.js --fix",
    "lint": "eslint --format codeframe ./src --ext .ts,.js",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "seed": "ts-node --files src/scripts/executeSeeds.ts",
    "test:watch": "TZ=UTC jest --detectOpenHandles --watch",
    "test": "TZ=UTC jest --detectOpenHandles",
    "test:coverage": "TZ=UTC jest --detectOpenHandles --coverage",
    "ts-node": "ts-node --files"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arbol-Project/sales-platform-graphql-api.git"
  },
  "author": "Arbol",
  "license": "UNLICENSED",
  "dependencies": {
    "@apollo/gateway": "^2.2.1",
    "@apollo/subgraph": "^2.2.1",
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.1",
    "@graphql-tools/schema": "^8.3.1",
    "@graphql-tools/utils": "^8.6.1",
    "apollo-server-core": "^3.6.2",
    "apollo-server-express": "^3.6.2",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^11.0.0",
    "express": "^4.17.2",
    "graphql": "^16.2.0",
    "graphql-scalars": "^1.14.1",
    "graphql-tools": "^8.2.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.4.0",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-resolvers": "^2.4.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^6.0.4",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --format codeframe --cache --fix"
  }
}
